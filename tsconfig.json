{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,

    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,

    "resolveJsonModule": true,
    "isolatedModules": true,

    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",

    "types": ["vite/client"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
